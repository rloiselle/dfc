<%= form_for [refinery, :testimonials_admin, @testimonial] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @testimonial,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>
   <div class='field'>
    <%= f.label :project_type -%>
    <%= f.text_field :project_type, :class => 'larger widest'  -%>

  </div>
   <div class='field'>
    <%= f.label :project_date -%>
    <%= f.text_field :project_date, :class => 'larger widest'  -%>

  </div>
   <div class='page_part'>
    <%= f.label :comments -%>
    <%= f.text_area :comments, :rows => 20, :class => 'wymeditor widest'  -%>

  </div>
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.testimonials.admin.testimonials.testimonial'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @testimonial.name) %>
<% end -%>
